<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Register</title>
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
  <link href="../../stylesheets/register.css" rel="stylesheet">

</head>

<body>
  {{> navbar-new }}
  <div class="login">
    <h1>Sign Up</h1>
  
    <!-- multistep form -->
    <form id="msform" name="signup" method="post" action="/signup">
      <!-- progressbar -->
      <ul id="progressbar">
        <li class="active">Account Setup</li>
        <li>About Me</li>
        <!-- <li>Personal Details</li> -->
      </ul>
    <!-- fieldsets -->
    <fieldset>
      <h2 class="fs-title">Create your account</h2>
      <!-- <h3 class="fs-subtitle">This is step 1</h3> -->
      <input type="text" name="name" placeholder="Name" required="required" /> </li>
      <input type="text" name="username" placeholder="Username" class="username" required="required" /> </li>
      <p class="username-output output"></p> </li>
      <input type="password" name="password" placeholder="Password" class="password" required="required" /> </li>
      <p class="password-output output"></p> </li>
      <input type="password" name="cpassword" placeholder="Confirm Password" class="cpassword" required="required" /> </li>
      <p class="cpassword-output output"></p> </li>
      <input type="button" name="next" class="next action-button" value="Next" /> </li>
    </fieldset>
    <fieldset>
      <h2 class="fs-title">Tell us a bit more about yourself!</h2>
      <h3 class="fs-subtitle">This is optional. You can always edit your description later.</h3>
      <input type="text" name="email" placeholder="Email" /> </li>
      <input type="text" name="phone" placeholder="Phone Number" /> </li>
      <textarea name="about" cols="40" rows="5" placeholder="About Me"></textarea>
      <input type="button" name="previous" class="previous action-button" value="Previous"/>
      <button type="submit" class="submit action-button">Sign Up</button>
    </fieldset>
